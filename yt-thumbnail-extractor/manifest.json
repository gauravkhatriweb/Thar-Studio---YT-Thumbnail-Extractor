{
  "manifest_version": 3,
  "name": "YT Thumbnail Extractor",
  "description": "Extract and download YouTube video thumbnails in multiple resolutions.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtu.be/*"
  ]
}
